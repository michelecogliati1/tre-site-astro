<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    const submenu = document.getElementById('submenu-sticky');
    const submenuList = document.querySelector('.submenu-list');
    const submenuLinks = document.querySelectorAll('.submenu-link');
    const sections = document.querySelectorAll('.formula-detail-section[id], .feature-section[id], .formule-section[id]');
    
    // Sticky CTA elements
    const stickyCta = document.getElementById('sticky-cta');
    const heroSection = document.querySelector('.hero');
    const ctaPreventivoSection = document.querySelector('.cta-preventivo-hero');

    // Formula Filter
    const filterTabs = document.querySelectorAll('.formula-tab');
    const formulaCards = document.querySelectorAll('.formula-preview-card');

    // Calcola offset totale
    const getOffset = () => {
      const headerHeight = header ? header.offsetHeight : 0;
      const submenuHeight = submenu ? submenu.offsetHeight : 0;
      return headerHeight + submenuHeight + 40;
    };

    // Formula Filter Logic
    filterTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Update active tab
        filterTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        const filter = tab.dataset.filter;

        // Filter cards
        formulaCards.forEach(card => {
          const category = card.dataset.category;
          if (filter === 'all' || category === filter) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });

    // Smooth scroll per submenu links
    submenuLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(1);
        const targetSection = document.getElementById(targetId || '');
        
        if (targetSection) {
          const offset = getOffset();
          const targetPosition = targetSection.getBoundingClientRect().top + window.scrollY - offset;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Active submenu link on scroll
    const updateActiveLink = () => {
      const scrollPosition = window.scrollY + getOffset() + 100;
      
      let currentSection = '';
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.offsetHeight;
        
        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          currentSection = section.getAttribute('id') || '';
        }
      });

      submenuLinks.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === `#${currentSection}`) {
          link.classList.add('active');
        }
      });
    };

    // Sticky CTA visibility
    const updateStickyCta = () => {
      if (!stickyCta || !heroSection) return;

      const heroBottom = heroSection.getBoundingClientRect().bottom;
      const ctaTop = ctaPreventivoSection ? ctaPreventivoSection.getBoundingClientRect().top : Infinity;
      const windowHeight = window.innerHeight;

      // Show sticky CTA when hero is out of view and CTA section is not visible
      if (heroBottom < 0 && ctaTop > windowHeight) {
        stickyCta.classList.add('visible');
      } else {
        stickyCta.classList.remove('visible');
      }
    };

    // Scroll event listeners
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateActiveLink();
          updateStickyCta();
          ticking = false;
        });
        ticking = true;
      }
    });

    // Initial calls
    updateActiveLink();
    updateStickyCta();
  });
</script>