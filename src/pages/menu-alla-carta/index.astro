  ogImage: "https://www.ristorantepizzeriatre.it/img/menu-carta/menu-carta-ristorante-pizzeria-tre-merate-hero.webp",
  preloadImage: "/img/menu-carta/menu-carta-ristorante-pizzeria-tre-merate-hero.webp",
};

// Schema.org per Menu + BreadcrumbList
