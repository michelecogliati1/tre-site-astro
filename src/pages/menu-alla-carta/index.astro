            },
            {
              "@type": "MenuItem",
              "name": "Scialatielli ai Frutti di Mare",
              "description": "gamberi, seppie, in base alla disponibilità giornaliera",
              "offers": {
                "@type": "Offer",
                "price": "18.00",
                "priceCurrency": "EUR"
              }
            }
          ]
        },
        {
          "@type": "MenuSection",
          "name": "Secondi Piatti",
          "description": "La tradizione dei secondi piatti italiani con ingredienti genuini"
        },
        {
          "@type": "MenuSection",
          "name": "Carni alla Griglia",
          "description": "Carni selezionate con cura, per offrirti sapori intensi e cotture perfette"
        },
        {
          "@type": "MenuSection",
          "name": "Le Insalatone",
          "description": "Insalate con ingredienti freschi e di stagione"
        },
        {
          "@type": "MenuSection",
          "name": "Contorni",
          "description": "Contorni semplici ma ricchi di sapore"
        },
        {
          "@type": "MenuSection",
          "name": "Dessert fatti in casa",
          "description": "Dolci preparati con passione e ingredienti genuini"
        }
      ]
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://www.ristorantepizzeriatre.it/menu-alla-carta/#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://www.ristorantepizzeriatre.it/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Menù alla Carta",
          "item": "https://www.ristorantepizzeriatre.it/menu-alla-carta/"
        }
      ]
    },
    {
      "@type": "WebPage",
      "@id": "https://www.ristorantepizzeriatre.it/menu-alla-carta/#webpage",
      "url": "https://www.ristorantepizzeriatre.it/menu-alla-carta/",
      "name": "Menù alla Carta | Ristorante Pizzeria TRE Merate",
      "isPartOf": {
        "@id": "https://www.ristorantepizzeriatre.it/#website"
      },
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://www.ristorantepizzeriatre.it/img/menu-carta/menu-carta-ristorante-pizzeria-tre-merate-hero.webp"
      },
      "breadcrumb": {
        "@id": "https://www.ristorantepizzeriatre.it/menu-alla-carta/#breadcrumb"
