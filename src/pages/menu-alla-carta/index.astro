      "mainEntityOfPage": "https://www.ristorantepizzeriatre.it/menu-alla-carta/",
      "inLanguage": "it-IT",
      "offers": {
        "@type": "Offer",
        "priceCurrency": "EUR"
      },
      "hasMenuSection": [
        {
          "@type": "MenuSection",
          "name": "Antipasti",
          "description": "Un viaggio tra i sapori tradizionali degli antipasti italiani, preparati con cura e ingredienti selezionati",
          "hasMenuItem": [
            {
              "@type": "MenuItem",
              "name": "Soutè di Cozze",
              "description": "con pomodoro fresco, basilico e crostini di pane",
