              }
            },
            {
              "@type": "MenuItem",
              "name": "Piovra Scottata",
              "description": "su crema di zucca e bacon croccante",
              "offers": {
                "@type": "Offer",
                "price": "16.00",
                "priceCurrency": "EUR"
              }
            }
          ]
        },
        {
          "@type": "MenuSection",
          "name": "Primi Piatti",
          "description": "Piatti che rappresentano la tradizione culinaria italiana, arricchiti da ingredienti di alta qualità",
          "hasMenuItem": [
            {
              "@type": "MenuItem",
              "name": "Risotto Acquerello",
              "description": "con funghi porcini freschi",
              "offers": {
                "@type": "Offer",
                "price": "16.00",
                "priceCurrency": "EUR"
