---
import Layout from "../../layouts/Layout.astro";

// SEO Data
const seoData = {
  title: "Cookie Policy - Ristorante Pizzeria TRE Merate",
  description: "Informativa sui cookie utilizzati dal sito web del Ristorante Pizzeria TRE a Merate.",
  robots: "index, follow",
  canonical: "https://www.ristorantepizzeriatre.it/cookie-policy/",
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  robots={seoData.robots}
  canonical={seoData.canonical}
>
  <!-- Breadcrumb -->
  <nav class="breadcrumb-nav" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li aria-current="page">Cookie Policy</li>
      </ol>
    </div>
  </nav>

  <!-- Cookie Policy Content -->
  <section class="policy-section">
    <div class="container">
      <div class="policy-content">
        <h1>Cookie Policy</h1>
        
        <!-- Iubenda Cookie Policy - Iframe diretto -->
        <div class="iubenda-embed-container">
          <iframe 
            src="https://www.iubenda.com/privacy-policy/97540451/cookie-policy"
            title="Cookie Policy"
            loading="lazy"
          ></iframe>
        </div>

      </div>
    </div>
  </section>
</Layout>

<style>
  .policy-section {
    padding: 3rem 0 5rem;
    background-color: var(--bg-white);
  }

  @media (min-width: 768px) {
    .policy-section {
      padding: 4rem 0 6rem;
    }
  }

  .policy-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .policy-content h1 {
    font-size: 40px;
    line-height: 48px;
    margin-bottom: 2rem;
    color: var(--text-dark);
    text-align: center;
  }

  @media (max-width: 768px) {
    .policy-content h1 {
      font-size: 32px;
      line-height: 40px;
    }
  }

  /* Container per iframe Iubenda */
  .iubenda-embed-container {
    background-color: var(--bg-light);
    border-radius: 8px;
    overflow: hidden;
  }

  .iubenda-embed-container iframe {
    width: 100%;
    height: 800px;
    border: none;
    display: block;
  }

  @media (max-width: 768px) {
    .iubenda-embed-container iframe {
      height: 600px;
    }
  }
</style>