        </div>
        <button class="carousel-arrow carousel-arrow-right" data-carousel="cene-passate" aria-label="Successivo">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" /></svg>
        </button>
      </div>
      <div class="carousel-indicators" data-carousel="cene-passate"></div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- I Nostri Partner -->
