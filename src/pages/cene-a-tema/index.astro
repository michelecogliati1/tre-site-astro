<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Inizializza i caroselli usando la classe Carousel globale
    if (typeof Carousel !== 'undefined') {
      new Carousel('cene-passate');
      new Carousel('partners');
    }

    // Sticky CTA
    initStickyCta();

    // Newsletter form
    initNewsletterCeneForm();
  });

  function initStickyCta() {
    const stickyCta = document.getElementById('sticky-cta');
    const heroSection = document.querySelector('.hero');
    const newsletterSection = document.getElementById('newsletter-cene');

    if (!stickyCta || !heroSection || !newsletterSection) return;

    const handleScroll = () => {
      const heroBottom = heroSection.getBoundingClientRect().bottom;
      const newsletterTop = newsletterSection.getBoundingClientRect().top;
      const windowHeight = window.innerHeight;

      const shouldShow = heroBottom < 0 && newsletterTop > windowHeight - 100;

      if (shouldShow) {
        stickyCta.classList.add('visible');
      } else {
        stickyCta.classList.remove('visible');
      }
    };

    window.addEventListener('scroll', handleScroll);
    handleScroll();
  }

  function initNewsletterCeneForm() {
    const form = document.getElementById('newsletter-cene-form');
    if (!form) return;

    form.addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Qui verrà integrato Brevo
      console.log('Newsletter Cene a Tema submission:', data);

      alert('Grazie per esserti iscritto! Riceverai presto le anteprime delle nostre cene a tema.');
      form.reset();
    });
  }
</script>