            <label class="brevo-checkbox">
              <input type="checkbox" name="IDEE_REGALO" value="1" id="IDEE_REGALO" />
              <span class="brevo-checkbox-custom"></span>
              <span class="brevo-checkbox-content">
                <strong>Idee Regalo</strong>
                <small>Voglio ricevere idee regalo per occasioni speciali</small>
              </span>
            </label>
          </div>

          <div class="brevo-form-divider"></div>

          <!-- Privacy e Consenso -->
          <div class="brevo-form-group">
            <label class="brevo-checkbox brevo-checkbox-standalone">
              <input type="checkbox" name="OPT_IN" value="1" id="OPT_IN" required />
              <span class="brevo-checkbox-custom"></span>
              <span class="brevo-checkbox-content">
                <strong>Consenso alla ricezione di comunicazioni di Marketing *</strong>
                <small>Accetto di ricevere le newsletter e l'informativa sulla privacy</small>
              </span>
            </label>
            <span class="brevo-field-hint">Per annullare l'iscrizione in qualsiasi momento tramite il link presente nella newsletter.</span>
          </div>

          <!-- Brevo Privacy Notice -->
