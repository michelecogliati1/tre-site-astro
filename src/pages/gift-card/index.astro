<style>
  /* Hero Gift Card - Override solo immagine */
  .hero-gift-card {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.62), rgba(0, 0, 0, 0.62)),
      url('/img/gift-card/gift-card-ristorante-pizzeria-tre-merate-hero.webp');
  }

  /* CTA Section Gift Card - Override solo immagine */
  .cta-section-gift-card {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65)),
      url('/img/gift-card/gift-card-ristorante-pizzeria-tre-merate-bisogno-aiuto.webp');
  }

  /* Main Section */
  .gift-card-main {
    padding: 60px 0;
  }

  .gift-card-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  @media (max-width: 968px) {
    .gift-card-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  /* Info Column */
  .gift-card-info h2 {
    margin-bottom: 2rem;
    color: var(--text-dark);
  }

  .steps-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }

  .steps-list li {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    background: var(--primary-color);
    color: var(--text-white);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 20px;
    flex-shrink: 0;
  }

  .step-content strong {
    display: block;
    font-size: 22px;
    margin-bottom: 0.25rem;
  }

  .step-content p {
    font-size: 18px;
    line-height: 1.4;
    color: #666;
    margin: 0;
  }

  /* Features Grid */
  .gift-card-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-light-orange);
    border-radius: 12px;
  }

  @media (max-width: 500px) {
    .gift-card-features {
      grid-template-columns: 1fr;
    }
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 18px;
  }

  .feature-icon {
    font-size: 24px;
  }

  /* Widget Column */
  .gift-card-widget {
    background: var(--bg-white);
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 120px;
  }

  .gift-card-widget h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--text-dark);
  }

  .widget-container {
    min-height: 400px;
  }

  /* FAQ Section */
  .gift-card-faq {
    padding: 60px 0;
    background: var(--bg-light);
  }

  .gift-card-faq h2 {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: var(--bg-white);
    margin-bottom: 1rem;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .faq-item summary {
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    font-weight: 600;
    font-size: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.3s ease;
  }

  .faq-item summary:hover {
    background: var(--bg-light-orange);
  }

  .faq-item summary::marker {
    display: none;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary::after {
    content: '+';
    font-size: 24px;
    font-weight: 400;
    color: var(--primary-color);
    transition: transform 0.3s ease;
  }

  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }

  .faq-item p {
    padding: 0 1.5rem 1.25rem;
    font-size: 18px;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }
</style>