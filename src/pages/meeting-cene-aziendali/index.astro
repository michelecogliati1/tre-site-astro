    {
      "@type": "WebPage",
      "@id": "https://www.ristorantepizzeriatre.it/meeting-cene-aziendali/#webpage",
      "url": "https://www.ristorantepizzeriatre.it/meeting-cene-aziendali/",
      "name": "Organizza Meeting e Cene Aziendali | Ristorante Pizzeria TRE Merate",
      "isPartOf": {
        "@id": "https://www.ristorantepizzeriatre.it/#website"
      },
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://www.ristorantepizzeriatre.it/img/meeting/menu-meeting-cene-aziendali-ristorante-pizzeria-tre-hero.webp"
      },
      "breadcrumb": {
        "@id": "https://www.ristorantepizzeriatre.it/meeting-cene-aziendali/#breadcrumb"
