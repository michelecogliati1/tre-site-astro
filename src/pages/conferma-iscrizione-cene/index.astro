---
import Layout from "../../layouts/Layout.astro";

// SEO Data - noindex per thank you page
const seoData = {
  title: "Conferma la tua Iscrizione - TRE Grill + Pizzeria",
  description: "Controlla la tua email per confermare l'iscrizione alla newsletter del Ristorante Pizzeria TRE.",
  robots: "noindex, nofollow",
  canonical: "https://www.ristorantepizzeriatre.it/conferma-iscrizione-cene/",
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  robots={seoData.robots}
  canonical={seoData.canonical}
>
  <!-- Hero Thank You -->
  <section class="hero-thankyou">
    <div class="container hero-thankyou-content">
      <h1>Conferma la tua iscrizione via e-mail!</h1>
      <p>
        Abbiamo inviato un'email di conferma. Clicca sul pulsante all'interno<br />
        per completare l'iscrizione alla newsletter.
      </p>
      <a href="/#scopri-menu" class="btn btn-primary">Esplora il Men√π</a>
    </div>
  </section>
</Layout>

<style>
  .hero-thankyou {
    color: var(--text-white);
    text-align: center;

    background-image:
      linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.55)),
      url('/img/conferma-iscrizione-cene/grazie-per-la-richiesta-ristorante-pizzeria-tre-merate.webp');
    background-size: cover;
    background-position: center;

    min-height: clamp(500px, 70vh, 700px);
    display: flex;
    align-items: center;
    justify-content: center;

    padding: 5rem 0;
  }

  @media (max-width: 768px) {
    .hero-thankyou {
      min-height: clamp(450px, 65vh, 600px);
      padding: 4rem 0;
    }
  }

  .hero-thankyou-content {
    max-width: 800px;
  }

  .hero-thankyou h1 {
    font-size: 48px;
    font-weight: 600;
    font-style: italic;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-white);
  }

  @media (max-width: 768px) {
    .hero-thankyou h1 {
      font-size: 35px;
    }
  }

  .hero-thankyou p {
    font-size: 20px;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    color: var(--text-gray);
  }

  @media (max-width: 768px) {
    .hero-thankyou p {
      font-size: 18px;
    }

    .hero-thankyou p br {
      display: none;
    }
  }
</style>