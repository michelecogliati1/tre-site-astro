---
import Layout from "../../layouts/Layout.astro";

// SEO Data
const seoData = {
  title: "Festeggia il Compleanno con Menù su Misura - TRE Grill + Pizzeria",
  description: "Scegli tra TRE menù su misura: Gran Festa Gourmet, Serata Pizza Party o Menù Rinfresco. Richiedi un preventivo e personalizza la tua festa!",
  canonical: "https://www.ristorantepizzeriatre.it/compleanni/",
  ogImage: "https://www.ristorantepizzeriatre.it/img/compleanni/compleanni-menu-ristorante-pizzeria-tre-merate-hero.webp",
  preloadImage: "/img/compleanni/compleanni-menu-ristorante-pizzeria-tre-merate-hero.webp",
};

// Schema.org per Event + BreadcrumbList
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.ristorantepizzeriatre.it/compleanni/#service",
      "name": "Feste di Compleanno - Ristorante Pizzeria TRE",
      "description": "Organizza la tua festa di compleanno al Ristorante Pizzeria TRE a Merate. Scegli tra menù Gourmet, Pizza Party o Buffet Dinamico con preventivi personalizzati.",
      "url": "https://www.ristorantepizzeriatre.it/compleanni/",
      "serviceType": "Organizzazione Feste di Compleanno",
      "provider": {
        "@id": "https://www.ristorantepizzeriatre.it/#restaurant"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 45.6983,
          "longitude": 9.4183
        },
        "geoRadius": "20000"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Formule Compleanno",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Gran Festa Gourmet",
              "description": "Menù completo con antipasto, primo, secondo, torta, caffè e bevande incluse"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Pizza Party - Menù Pizza",
              "description": "Pizza a scelta, patatine fritte, torta, caffè e bevande incluse"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Pizza Party - Giro Pizza",
              "description": "Pizze a spicchi (6/7 tipi), torta e caffè inclusi"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Buffet Dinamico",
              "description": "Buffet con aperitivi, piatti di cucina, primo servito, torta, caffè e bevande incluse. Minimo 20 ospiti."
            }
          }
        ]
      }
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://www.ristorantepizzeriatre.it/compleanni/#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://www.ristorantepizzeriatre.it/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Compleanni",
          "item": "https://www.ristorantepizzeriatre.it/compleanni/"
        }
      ]
    },
    {
      "@type": "WebPage",
      "@id": "https://www.ristorantepizzeriatre.it/compleanni/#webpage",
      "url": "https://www.ristorantepizzeriatre.it/compleanni/",
      "name": "Festeggia il Compleanno con Menù su Misura | Ristorante Pizzeria TRE Merate",
      "isPartOf": {
        "@id": "https://www.ristorantepizzeriatre.it/#website"
      },
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://www.ristorantepizzeriatre.it/img/compleanni/compleanni-menu-ristorante-pizzeria-tre-merate-hero.webp"
      },
      "breadcrumb": {
        "@id": "https://www.ristorantepizzeriatre.it/compleanni/#breadcrumb"
      },
      "inLanguage": "it-IT"
    }
  ]
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  canonical={seoData.canonical}
  ogImage={seoData.ogImage}
  preloadImage={seoData.preloadImage}
>
  <!-- Schema.org JSON-LD -->
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero hero-compleanni">
    <div class="container hero-content">
      <h1>Festeggia il Compleanno<br />con le Nostre Formule</h1>
      <p>
        Scegli il menù ideale per il tuo compleanno e rendi<br />
        il tuo evento indimenticabile.
      </p>
      <div class="hero-buttons">
        <a href="#formule" class="btn btn-primary">Scopri le Formule</a>
        <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-outline">Richiedi Preventivo</a>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="breadcrumb-nav" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li aria-current="page">Compleanni</li>
      </ol>
    </div>
  </nav>

  <!-- Menu Secondario Sticky -->
  <nav class="submenu-sticky" id="submenu-sticky">
    <div class="container">
      <ul class="submenu-list">
        <li><a href="#formule" class="submenu-link active">Le Formule</a></li>
        <li><a href="#gourmet" class="submenu-link">Gourmet</a></li>
        <li><a href="#pizza-party" class="submenu-link">Pizza Party</a></li>
        <li><a href="#buffet" class="submenu-link">Buffet</a></li>
        <li><a href="#personalizza" class="submenu-link">Personalizza</a></li>
      </ul>
    </div>
  </nav>

  <!-- 3 Soluzioni per un Compleanno su Misura -->
  <section class="formule-section" id="formule">
    <div class="container">
      <div class="section-header">
        <h2>3 Soluzioni per un Compleanno su Misura</h2>
        <p>
          Gourmet, pizza o buffet? Tre formule pensate per rendere unico il tuo giorno speciale.
          Scegli quella che fa per te!
        </p>
      </div>

      <!-- Formula Filter Tabs -->
      <div class="formula-tabs">
        <button class="formula-tab active" data-filter="all">Tutte</button>
        <button class="formula-tab" data-filter="gourmet">Gourmet</button>
        <button class="formula-tab" data-filter="pizza">Pizza</button>
        <button class="formula-tab" data-filter="rinfresco">Rinfresco</button>
      </div>

      <!-- Formula Cards Preview -->
      <div class="formula-preview-grid">
        <a href="#gourmet" class="formula-preview-card" data-category="gourmet">
          <div class="formula-preview-image">
            <img 
              src="/img/compleanni/menu-compleanni-gourmet-ristorante-pizzeria-tre-merate.webp" 
              alt="Gran Festa Gourmet - Compleanno al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge">Gourmet</span>
            <h3>Gran Festa Gourmet</h3>
            <p>Menù completo per una cena elegante e ricca</p>
          </div>
        </a>

        <a href="#pizza-party" class="formula-preview-card" data-category="pizza">
          <div class="formula-preview-image">
            <img 
              src="/img/compleanni/menu-pizza-compleanni-ristorante-pizzeria-tre-merate.webp" 
              alt="Pizza Party - Compleanno al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge">Pizza</span>
            <h3>Pizza Party</h3>
            <p>Festa conviviale a base di pizza</p>
          </div>
        </a>

        <a href="#buffet" class="formula-preview-card" data-category="rinfresco">
          <div class="formula-preview-image">
            <img 
              src="/img/compleanni/menu-buffet-compleanni-ristorante-pizzeria-tre-merate.webp" 
              alt="Buffet Dinamico - Compleanno al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge">Rinfresco</span>
            <h3>Buffet Dinamico</h3>
            <p>Buffet con aperitivi e piatti di cucina</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Gran Festa Gourmet -->
  <section class="formula-detail-section" id="gourmet">
    <div class="container">
      <div class="formula-detail-grid">
        <div class="formula-detail-content">
          <span class="formula-detail-badge">Gourmet</span>
          <h2>Gran Festa Gourmet</h2>
          <p class="formula-detail-intro">
            Un menù completo per chi desidera una cena elegante e ricca. Ecco un esempio:
          </p>
          
          <div class="menu-example">
            <div class="menu-example-item">
              <span class="menu-example-label">Antipasto</span>
              <p>Affettati misti con sottaceti e focaccia al rosmarino</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Primo</span>
              <p>Risotto Acquerello con crema di zola, pere e noci tostate</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Secondo</span>
              <p>Tagliata di manzo con patate al forno</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Torta</span>
              <p>Torta di compleanno personalizzata</p>
            </div>
            <div class="menu-example-included">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Caffè e Bevande incluse</span>
            </div>
          </div>

          <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
        </div>
        <div class="formula-detail-image">
          <img 
            src="/img/compleanni/menu-compleanni-gourmet-ristorante-pizzeria-tre-merate.webp" 
            alt="Gran Festa Gourmet - Menù compleanno elegante al Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Pizza Party -->
  <section class="formula-detail-section formula-detail-section-alt" id="pizza-party">
    <div class="container">
      <div class="section-header">
        <h2>Pizza Party</h2>
        <p>
          La soluzione perfetta per una festa conviviale a base di pizza! Scegli tra il Menù Pizza,
          con una pizza a scelta, o il Giro Pizza, per assaggiare più gusti in compagnia.
        </p>
      </div>

      <div class="pizza-party-grid">
        <!-- Giro Pizza -->
        <div class="pizza-party-card">
          <div class="pizza-party-image">
            <img 
              src="/img/compleanni/giropizza-compleanni-ristorante-pizzeria-tre-merate.webp" 
              alt="Giro Pizza - Compleanno al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="pizza-party-content">
            <h3>Giro Pizza</h3>
            <div class="menu-example">
              <div class="menu-example-item">
                <p>Pizze a spicchi (6/7 tipi di pizza) in base al numero totale degli ospiti</p>
              </div>
              <div class="menu-example-item">
                <span class="menu-example-label">Torta e Caffè</span>
              </div>
              <div class="menu-example-note">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                <span>Bevande escluse</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Menù Pizza -->
        <div class="pizza-party-card">
          <div class="pizza-party-image">
            <img 
              src="/img/compleanni/menu-pizza-compleanni-ristorante-pizzeria-tre-merate.webp" 
              alt="Menù Pizza - Compleanno al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="pizza-party-content">
            <h3>Menù Pizza</h3>
            <div class="menu-example">
              <div class="menu-example-item">
                <p>Pizza a scelta e patatine fritte</p>
              </div>
              <div class="menu-example-item">
                <span class="menu-example-label">Torta</span>
              </div>
              <div class="menu-example-included">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>Caffè e Bevande incluse</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Richiedi Preventivo per Pizza Party -->
      <div class="pizza-party-cta">
        <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Buffet Dinamico -->
  <section class="formula-detail-section" id="buffet">
    <div class="container">
      <div class="formula-detail-grid formula-detail-grid-reverse">
        <div class="formula-detail-image">
          <img 
            src="/img/compleanni/menu-buffet-compleanni-ristorante-pizzeria-tre-merate.webp" 
            alt="Buffet Dinamico - Compleanno al Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
        <div class="formula-detail-content">
          <span class="formula-detail-badge">Rinfresco</span>
          <h2>Buffet Dinamico</h2>
          <p class="formula-detail-note">
            Disponibile dal lunedì al venerdì e domenica sera, per un numero minimo di 20 ospiti
          </p>
          <p class="formula-detail-intro">
            Buffet con aperitivi, piatti di cucina e dessert. Ecco un esempio:
          </p>
          
          <div class="menu-example">
            <div class="menu-example-item">
              <span class="menu-example-label">Rinfresco</span>
              <p>Stuzzicherie dello Chef, mondeghini, canapé, verdure in pastella, olive ascolane, crostini con burro e acciughe, piccola tartare di fassona, focaccia e pizze</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Primo servito</span>
              <p>Risotto al rosmarino e formaggini di Montevecchia</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Torta</span>
              <p>Torta di compleanno personalizzata</p>
            </div>
            <div class="menu-example-included">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Caffè e Bevande incluse</span>
            </div>
          </div>

          <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Personalizza la Tua Festa -->
  <section class="feature-section" id="personalizza">
    <div class="container">
      <div class="feature-grid">
        <div class="feature-content">
          <h2>Personalizza la Tua Festa</h2>
          <p class="feature-intro">
            Scegli la formula, personalizza il menù e lascia che il nostro team si occupi di tutto per un compleanno perfetto.
          </p>
          <ul class="feature-steps-list">
            <li>
              <span class="step-circle">1</span>
              <div class="step-content">
                <strong>Richiedi un Preventivo</strong>
                <p>Clicca su richiedi preventivo e invia la richiesta</p>
              </div>
            </li>
            <li>
              <span class="step-circle">2</span>
              <div class="step-content">
                <strong>Scegli la Formula</strong>
                <p>Scegli tra menù cucina, pizza o rinfresco</p>
              </div>
            </li>
            <li>
              <span class="step-circle">3</span>
              <div class="step-content">
                <strong>Personalizza il Menù</strong>
                <p>Modifica i piatti secondo i tuoi gusti</p>
              </div>
            </li>
          </ul>
        </div>
        <div class="feature-image">
          <img
            src="/img/compleanni/personalizza-compleanno-ristorante-pizzeria-tre-merate.webp"
            alt="Personalizza la tua festa di compleanno - Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Richiedi un Preventivo Personalizzato - STILE HERO FULL WIDTH -->
  <section class="cta-preventivo-hero">
    <div class="container cta-preventivo-hero-content">
      <h2>Richiedi un Preventivo Personalizzato</h2>
      <p>
        Compila il modulo per ricevere un preventivo su misura per la tua festa di compleanno
      </p>
      <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Sticky CTA Bottom -->
  <div class="sticky-cta-bottom" id="sticky-cta">
    <div class="sticky-cta-container">
      <div class="sticky-cta-logo">
        <img src="/img/brand/tre-logo.svg" alt="TRE" width="50" height="50" />
      </div>
      <div class="sticky-cta-content">
        <span class="sticky-cta-title">Compleanni su Misura</span>
        <span class="sticky-cta-subtitle">Richiedi un preventivo personalizzato</span>
      </div>
      <a href="/contatti/?evento=compleanno#preventivo" class="btn btn-primary sticky-cta-btn">Richiedi Preventivo</a>
    </div>
  </div>
</Layout>

<style>
  /* Hero Compleanni */
  .hero-compleanni {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.62), rgba(0, 0, 0, 0.62)),
      url('/img/compleanni/compleanni-menu-ristorante-pizzeria-tre-merate-hero.webp');
  }

  /* Formule Section - FIX scroll-margin maggiore */
  .formule-section {
    scroll-margin-top: 220px;
  }

  @media (min-width: 992px) {
    .formule-section {
      scroll-margin-top: 240px;
    }
  }

  /* Formula Tabs */
  .formula-tabs {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .formula-tab {
    padding: 0.75rem 1.5rem;
    font-size: 18px;
    font-weight: 600;
    color: var(--text-dark);
    background-color: var(--bg-light);
    border: 2px solid transparent;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: var(--font-main);
    letter-spacing: 0.05em;
  }

  .formula-tab:hover {
    border-color: var(--primary-light);
  }

  .formula-tab.active {
    background-color: var(--primary-color);
    color: var(--text-white);
    border-color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .formula-tab {
      padding: 0.6rem 1rem;
      font-size: 16px;
    }
  }

  /* Formula Preview Grid */
  .formula-preview-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .formula-preview-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .formula-preview-card {
    background-color: var(--bg-white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: block;
  }

  .formula-preview-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .formula-preview-card.hidden {
    display: none;
  }

  .formula-preview-image {
    height: 220px;
    overflow: hidden;
  }

  .formula-preview-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .formula-preview-card:hover .formula-preview-image img {
    transform: scale(1.08);
  }

  .formula-preview-content {
    padding: 1.5rem;
    text-align: center;
  }

  .formula-preview-badge {
    display: inline-block;
    padding: 0.35rem 1rem;
    background-color: var(--primary-pale);
    color: var(--primary-dark);
    font-size: 13px;
    font-weight: 600;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .formula-preview-content h3 {
    font-size: 24px;
    line-height: 30px;
    margin-bottom: 0.5rem;
    color: var(--text-dark);
  }

  .formula-preview-content p {
    font-size: 16px;
    line-height: 24px;
    color: var(--text-dark);
    opacity: 0.75;
    margin: 0;
  }

  @media (max-width: 768px) {
    .formula-preview-image {
      height: 200px;
    }

    .formula-preview-content h3 {
      font-size: 22px;
    }
  }

  /* Formula Detail Section */
  .formula-detail-section {
    padding: 4rem 0;
    background-color: var(--bg-white);
    scroll-margin-top: 220px;
  }

  .formula-detail-section-alt {
    background-color: var(--bg-light);
  }

  @media (min-width: 768px) {
    .formula-detail-section {
      padding: 5rem 0;
    }
  }

  @media (min-width: 992px) {
    .formula-detail-section {
      scroll-margin-top: 240px;
    }
  }

  .formula-detail-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 992px) {
    .formula-detail-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .formula-detail-grid-reverse {
    direction: rtl;
  }

  .formula-detail-grid-reverse > * {
    direction: ltr;
  }

  @media (max-width: 991px) {
    .formula-detail-grid-reverse {
      direction: ltr;
