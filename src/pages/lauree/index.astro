---
import Layout from "../../layouts/Layout.astro";

// SEO Data
const seoData = {
  title: "Festeggia la Tua Laurea con Menù su Misura - TRE Grill + Pizzeria",
  description: "Celebra il traguardo della laurea con i nostri menù su misura: Laurea Gourmet, Pizza Party di Laurea o Rinfresco. Richiedi un preventivo online!",
  canonical: "https://www.ristorantepizzeriatre.it/lauree/",
  ogImage: "https://www.ristorantepizzeriatre.it/img/lauree/menu-laurea-ristorante-pizzeria-tre-merate-hero.webp",
  preloadImage: "/img/lauree/menu-laurea-ristorante-pizzeria-tre-merate-hero.webp",
};

// Schema.org per Service + BreadcrumbList
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.ristorantepizzeriatre.it/lauree/#service",
      "name": "Feste di Laurea - Ristorante Pizzeria TRE",
      "description": "Festeggia la tua laurea al Ristorante Pizzeria TRE a Merate. Scegli tra menù Gourmet, Pizza Party o Rinfresco con preventivi personalizzati.",
      "url": "https://www.ristorantepizzeriatre.it/lauree/",
      "serviceType": "Organizzazione Feste di Laurea",
      "provider": {
        "@id": "https://www.ristorantepizzeriatre.it/#restaurant"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 45.6983,
          "longitude": 9.4183
        },
        "geoRadius": "20000"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Formule Laurea",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Laurea Gourmet",
              "description": "Menù completo con antipasto, primo, secondo, torta, caffè e bevande incluse"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Pizza Party di Laurea",
              "description": "Giro Pizza o Menù Pizza con torta e caffè inclusi"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Rinfresco di Laurea",
              "description": "Buffet con aperitivi, piatti di cucina, primo servito, torta, caffè e bevande incluse. Minimo 20 ospiti."
            }
          }
        ]
      }
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://www.ristorantepizzeriatre.it/lauree/#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://www.ristorantepizzeriatre.it/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Lauree",
          "item": "https://www.ristorantepizzeriatre.it/lauree/"
        }
      ]
    },
    {
      "@type": "WebPage",
      "@id": "https://www.ristorantepizzeriatre.it/lauree/#webpage",
      "url": "https://www.ristorantepizzeriatre.it/lauree/",
      "name": "Festeggia la Tua Laurea con Menù su Misura | Ristorante Pizzeria TRE Merate",
      "isPartOf": {
        "@id": "https://www.ristorantepizzeriatre.it/#website"
      },
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://www.ristorantepizzeriatre.it/img/lauree/menu-laurea-ristorante-pizzeria-tre-merate-hero.webp"
      },
      "breadcrumb": {
        "@id": "https://www.ristorantepizzeriatre.it/lauree/#breadcrumb"
      },
      "inLanguage": "it-IT"
    }
  ]
};
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  canonical={seoData.canonical}
  ogImage={seoData.ogImage}
  preloadImage={seoData.preloadImage}
>
  <!-- Schema.org JSON-LD -->
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero hero-lauree">
    <div class="container hero-content">
      <h1>Festeggia la tua Laurea<br />con le Nostre Formule</h1>
      <p>
        Festeggia il traguardo della laurea con un evento speciale. Scegli<br />
        tra le nostre formule personalizzate per rendere unico il tuo giorno.
      </p>
      <div class="hero-buttons">
        <a href="#formule" class="btn btn-primary">Scopri le Formule</a>
        <a href="/contatti/?evento=laurea#preventivo" class="btn btn-outline">Richiedi Preventivo</a>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="breadcrumb-nav" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li aria-current="page">Menù Laurea</li>
      </ol>
    </div>
  </nav>

  <!-- Menu Secondario Sticky -->
  <nav class="submenu-sticky" id="submenu-sticky">
    <div class="container">
      <ul class="submenu-list">
        <li><a href="#formule" class="submenu-link active">Le Formule</a></li>
        <li><a href="#gourmet" class="submenu-link">Gourmet</a></li>
        <li><a href="#pizza-party" class="submenu-link">Pizza</a></li>
        <li><a href="#rinfresco" class="submenu-link">Rinfresco</a></li>
        <li><a href="#personalizza" class="submenu-link">Personalizza</a></li>
      </ul>
    </div>
  </nav>

  <!-- 3 Soluzioni per una Laurea su Misura -->
  <section class="formule-section" id="formule">
    <div class="container">
      <div class="section-header">
        <h2>3 Soluzioni per una Laurea su Misura</h2>
        <p>
          Gourmet, pizza o buffet? Tre proposte pensate per rendere unica la tua laurea. Scegli quella che fa per te!
        </p>
      </div>

      <!-- Formula Filter Tabs -->
      <div class="formula-tabs">
        <button class="formula-tab active" data-filter="all">Tutte</button>
        <button class="formula-tab active" data-filter="gourmet">Gourmet</button>
        <button class="formula-tab" data-filter="pizza">Pizza</button>
        <button class="formula-tab" data-filter="rinfresco">Rinfresco</button>
      </div>

      <!-- Formula Cards Preview -->
      <div class="formula-preview-grid formula-preview-grid-3">
        <a href="#gourmet" class="formula-preview-card" data-category="gourmet">
          <div class="formula-preview-image">
            <img 
              src="/img/lauree/menu-laurea-gourmet-ristorante-pizzeria-tre-merate.webp" 
              alt="Laurea Gourmet - Menù elegante per feste di laurea al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge formula-preview-badge-gourmet">Gourmet</span>
            <h3>Laurea Gourmet</h3>
            <p>Un menù completo per chi desidera una cena elegante e ricca</p>
          </div>
        </a>

        <a href="#pizza-party" class="formula-preview-card" data-category="pizza">
          <div class="formula-preview-image">
            <img 
              src="/img/lauree/giropizza-laurea-ristorante-pizzeria-tre-merate.webp" 
              alt="Pizza Party di Laurea - Giro Pizza al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge formula-preview-badge-pizza">Pizza</span>
            <h3>Pizza Party</h3>
            <p>La soluzione perfetta per una festa conviviale a base di pizza</p>
          </div>
        </a>

        <a href="#rinfresco" class="formula-preview-card" data-category="rinfresco">
          <div class="formula-preview-image">
            <img 
              src="/img/lauree/menu-buffet-laurea-ristorante-pizzeria-tre-merate.webp" 
              alt="Rinfresco di Laurea - Buffet al Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="300"
            />
          </div>
          <div class="formula-preview-content">
            <span class="formula-preview-badge formula-preview-badge-rinfresco">Rinfresco</span>
            <h3>Rinfresco di Laurea</h3>
            <p>Buffet con aperitivi, piatti di cucina e dessert</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Laurea Gourmet -->
  <section class="formula-detail-section" id="gourmet">
    <div class="container">
      <div class="formula-detail-grid">
        <div class="formula-detail-content">
          <span class="formula-detail-badge">Gourmet</span>
          <h2>Laurea Gourmet</h2>
          <p class="formula-detail-intro">
            Un menù completo per chi desidera una cena elegante e ricca. Ecco un esempio:
          </p>
          
          <div class="menu-example">
            <div class="menu-example-item">
              <span class="menu-example-label">Antipasto</span>
              <p>Tartare di fassona e Salumi selezionati</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Primo</span>
              <p>Gnocchi di patate fatti in casa al ragù d'anatra e scamorza</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Secondo</span>
              <p>Tagliata di manzo con patate al forno</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Torta</span>
              <p>Torta personalizzata per la laurea</p>
            </div>
            <div class="menu-example-included">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Caffè e Bevande incluse</span>
            </div>
          </div>

          <a href="/contatti/?evento=laurea#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
        </div>
        <div class="formula-detail-image formula-detail-image-no-shadow">
          <img 
            src="/img/lauree/menu-laurea-gourmet-ristorante-pizzeria-tre-merate.webp" 
            alt="Laurea Gourmet - Menù elegante per feste di laurea al Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Lauree su Misura -->
  <section class="cta-cerimonie-banner">
    <div class="container">
      <div class="cta-cerimonie-content">
        <div class="cta-cerimonie-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M22 10v6M2 10l10-5 10 5-10 5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M6 12v5c3 3 9 3 12 0v-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="cta-cerimonie-text">
          <h3>Lauree su misura alla TRE</h3>
          <p>Contattaci per richiedere un preventivo personalizzato.</p>
        </div>
        <a href="/contatti/?evento=laurea#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
      </div>
    </div>
  </section>

  <!-- Pizza Party Section -->
  <section class="formula-detail-section formula-detail-section-alt" id="pizza-party">
    <div class="container">
      <div class="section-header section-header-left">
        <h2>Pizza Party</h2>
        <p>
          La soluzione perfetta per una festa conviviale a base di pizza! Scegli tra il Menù Pizza, con una pizza a scelta, o il Giro Pizza, per assaggiare più gusti in compagnia.
        </p>
      </div>

      <!-- Pizza Party Cards Grid -->
      <div class="pizza-party-grid">
        <!-- Giro Pizza Card -->
        <div class="pizza-party-card">
          <div class="pizza-party-image">
            <img 
              src="/img/lauree/giropizza-laurea-ristorante-pizzeria-tre-merate.webp" 
              alt="Giro Pizza per feste di laurea - Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="250"
            />
          </div>
          <div class="pizza-party-content">
            <h3>Giro Pizza</h3>
            <div class="menu-example menu-example-compact">
              <div class="menu-example-item">
                <p>Pizze a spicchi (6/7 tipi di pizza) in base al numero totale degli ospiti</p>
              </div>
              <div class="menu-example-item">
                <span class="menu-example-label">Torta e Caffè</span>
              </div>
              <div class="menu-example-excluded">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>Bevande escluse</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Menù Pizza Card -->
        <div class="pizza-party-card">
          <div class="pizza-party-image">
            <img 
              src="/img/lauree/menu-pizza-laurea-ristorante-pizzeria-tre-merate.webp" 
              alt="Menù Pizza per feste di laurea - Ristorante TRE Merate"
              loading="lazy"
              decoding="async"
              width="400"
              height="250"
            />
          </div>
          <div class="pizza-party-content">
            <h3>Menù Pizza</h3>
            <div class="menu-example menu-example-compact">
              <div class="menu-example-item">
                <p>Pizza a scelta e patatine fritte</p>
              </div>
              <div class="menu-example-item">
                <span class="menu-example-label">Torta</span>
              </div>
              <div class="menu-example-included">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>Caffè e Bevande incluse</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Rinfresco di Laurea -->
  <section class="formula-detail-section" id="rinfresco">
    <div class="container">
      <div class="formula-detail-grid formula-detail-grid-reverse">
        <div class="formula-detail-image formula-detail-image-no-shadow">
          <img 
            src="/img/lauree/menu-buffet-laurea-ristorante-pizzeria-tre-merate.webp" 
            alt="Rinfresco di Laurea - Buffet al Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
        <div class="formula-detail-content">
          <span class="formula-detail-badge">Rinfresco</span>
          <h2>Rinfresco di Laurea</h2>
          <p class="formula-detail-note">
            Disponibile dal lunedì al venerdì e domenica sera, per un numero minimo di 20 ospiti
          </p>
          <p class="formula-detail-intro">
            Buffet con aperitivi, piatti di cucina e dessert. Ecco un esempio:
          </p>
          
          <div class="menu-example">
            <div class="menu-example-item">
              <span class="menu-example-label">Rinfresco</span>
              <p>Stuzzicherie dello Chef, mondeghini, canapee, verdure in pastella, olive ascolane, crostini con burro e acciughe, piccola tartare di fassona, focaccia e pizze</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Primo servito</span>
              <p>Risotto al rosmarino e formaggini di Montevecchia</p>
            </div>
            <div class="menu-example-item">
              <span class="menu-example-label">Torta</span>
              <p>Torta personalizzata per la laurea</p>
            </div>
            <div class="menu-example-included">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Caffè e Bevande incluse</span>
            </div>
          </div>

          <a href="/contatti/?evento=laurea#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Personalizza la tua Festa di Laurea -->
  <section class="feature-section" id="personalizza">
    <div class="container">
      <div class="feature-grid">
        <div class="feature-content">
          <h2>Personalizza la tua Festa di Laurea</h2>
          <p class="feature-intro">
            Scegli la formula più adatta alla tua festa di laurea, personalizza il menù e lascia che il nostro team si occupi di tutto.
          </p>
          <ul class="feature-steps-list">
            <li>
              <span class="step-circle">1</span>
              <div class="step-content">
                <strong>Richiedi un Preventivo</strong>
                <p>Clicca su richiedi preventivo e invia la richiesta</p>
              </div>
            </li>
            <li>
              <span class="step-circle">2</span>
              <div class="step-content">
                <strong>Scegli la Formula</strong>
                <p>Scegli tra menù cucina, pizza o rinfresco</p>
              </div>
            </li>
            <li>
              <span class="step-circle">3</span>
              <div class="step-content">
                <strong>Personalizza il Menù</strong>
                <p>Modifica i piatti secondo i tuoi gusti</p>
              </div>
            </li>
          </ul>
        </div>
        <div class="feature-image">
          <img
            src="/img/lauree/personalizza-laurea-ristorante-pizzeria-tre-merate.webp"
            alt="Personalizza la tua festa di laurea - Ristorante TRE Merate"
            loading="lazy"
            decoding="async"
            width="600"
            height="450"
          />
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Richiedi un Preventivo Personalizzato - STILE HERO FULL WIDTH -->
  <section class="cta-preventivo-hero cta-preventivo-hero-lauree">
    <div class="container cta-preventivo-hero-content">
      <h2>Richiedi un Preventivo Personalizzato</h2>
      <p>
        Compila il modulo per ricevere un preventivo su misura per la tua festa di laurea
      </p>
      <a href="/contatti/?evento=laurea#preventivo" class="btn btn-primary">Richiedi Preventivo</a>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Sticky CTA Bottom -->
  <div class="sticky-cta-bottom" id="sticky-cta">
    <div class="sticky-cta-container">
      <div class="sticky-cta-logo">
        <img src="/img/brand/tre-logo.svg" alt="TRE" width="50" height="50" />
      </div>
      <div class="sticky-cta-content">
        <span class="sticky-cta-title">Lauree su Misura</span>
        <span class="sticky-cta-subtitle">Richiedi un preventivo personalizzato</span>
      </div>
      <a href="/contatti/?evento=laurea#preventivo" class="btn btn-primary sticky-cta-btn">Richiedi Preventivo</a>
    </div>
  </div>
</Layout>

<style>
  /* Hero Lauree - background-position: top per non tagliare le facce */
  .hero-lauree {
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.62), rgba(0, 0, 0, 0.62)),
      url('/img/lauree/menu-laurea-ristorante-pizzeria-tre-merate-hero.webp');
    background-position: top center;
  }

  /* Formule Section - FIX scroll-margin maggiore */
  .formule-section {
    scroll-margin-top: 220px;
  }

  @media (min-width: 992px) {
    .formule-section {
      scroll-margin-top: 240px;
    }
  }

  /* Formula Tabs */
  .formula-tabs {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .formula-tab {
    padding: 0.75rem 1.5rem;
    font-size: 18px;
    font-weight: 600;
    color: var(--text-dark);
    background-color: var(--bg-light);
    border: 2px solid transparent;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: var(--font-main);
    letter-spacing: 0.05em;
  }

  .formula-tab:hover {
    border-color: var(--primary-light);
  }

  .formula-tab.active {
    background-color: var(--primary-color);
    color: var(--text-white);
    border-color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .formula-tab {
      padding: 0.6rem 1rem;
      font-size: 16px;
    }
  }

  /* Formula Preview Grid - 3 colonne per lauree */
  .formula-preview-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .formula-preview-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .formula-preview-grid-3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 992px) {
    .formula-preview-grid-3 {
      grid-template-columns: repeat(2, 1fr);
    }

    .formula-preview-grid-3 .formula-preview-card:last-child {
      grid-column: 1 / -1;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 640px) {
    .formula-preview-grid-3 {
      grid-template-columns: 1fr;
    }

    .formula-preview-grid-3 .formula-preview-card:last-child {
      max-width: 100%;
    }
  }

  .formula-preview-card {
    background-color: var(--bg-white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: block;
  }

  .formula-preview-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .formula-preview-card.hidden {
    display: none;
  }

  .formula-preview-image {
    height: 220px;
    overflow: hidden;
  }

  .formula-preview-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .formula-preview-card:hover .formula-preview-image img {
    transform: scale(1.08);
  }

  .formula-preview-content {
    padding: 1.5rem;
    text-align: center;
  }

  /* Badge con colori leggibili */
  .formula-preview-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 14px;
    font-weight: 600;
    border-radius: 20px;
    margin-bottom: 0.75rem;
    letter-spacing: 0.03em;
