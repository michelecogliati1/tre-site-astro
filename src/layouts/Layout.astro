---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AnnouncementBanner from "../components/AnnouncementBanner.astro";
import EventPopup from "../components/EventPopup.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

// Props SEO con valori di default
const {
  title = "Ristorante TRE - Grill + Pizzeria a Merate",
  description = "Ristorante Pizzeria TRE a Merate (LC). Pizze cotte nel forno a legna, carni alla griglia e cucina tradizionale italiana. Prenota il tuo tavolo.",
  robots = "index, follow",
  canonical,
  // Open Graph
  ogTitle,
  ogDescription,
  ogImage = "https://www.ristorantepizzeriatre.it/img/brand/og-image-default.webp",
  ogType = "website",
  // Preload immagine LCP (opzionale per pagina)
  preloadImage,
  preloadImageType = "image/webp",
} = Astro.props;

// URL base del sito
const siteUrl = "https://www.ristorantepizzeriatre.it";

// Genera canonical URL se non fornito
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;

// Usa title/description per OG se non specificati separatamente
const finalOgTitle = ogTitle || title;
const finalOgDescription = ogDescription || description;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-5CXSKFW3');</script>
    <!-- End Google Tag Manager -->

    <!-- Primary Meta Tags -->
    <link rel="canonical" href={canonicalUrl} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    
    <!-- Iubenda Privacy Controls and Cookie Solution -->
    <script type="text/javascript" src="https://embeds.iubenda.com/widgets/8f41e8f1-ac68-4b98-bae0-f79ed232bc72.js"></script>

    <!-- Favicon completo per browser e Google SERP -->
    <link rel="icon" type="image/png" href="/img/brand/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/img/brand/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/brand/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Ristorante TRE" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#C8102E" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={finalOgTitle} />
    <meta property="og:description" content={finalOgDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="it_IT" />
    <meta property="og:site_name" content="Ristorante Pizzeria TRE" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={finalOgTitle} />
    <meta name="twitter:description" content={finalOgDescription} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Geo Tags per Local SEO -->
    <meta name="geo.region" content="IT-LC" />
    <meta name="geo.placename" content="Merate" />
    <meta name="geo.position" content="45.6983;9.4183" />
    <meta name="ICBM" content="45.6983, 9.4183" />

    <!-- Preconnect per risorse esterne (prima del CSS per prioritÃ ) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload Font per evitare render-blocking -->
    <link 
      rel="preload" 
      as="style" 
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link 
        href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&display=swap" 
        rel="stylesheet" 
      />
    </noscript>

    <!-- Preload immagine LCP se specificata -->
    {preloadImage && (
      <link
        rel="preload"
        as="image"
        href={preloadImage}
        type={preloadImageType}
        fetchpriority="high"
      />
    )}

    <!-- CSS globale -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Dati strutturati Schema.org (slot per pagina) -->
    <slot name="schema" />

    <!-- Extra tag per singola pagina (preload, ecc.) -->
    <slot name="head" />
  </head>

  <body>
    <!-- Announcement Banner (sopra l'header) -->
    <AnnouncementBanner />

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5CXSKFW3"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <!-- Event Popup (modale) -->
    <EventPopup />

    <script src="/js/main.js" is:inline></script>
    
    <!-- Vercel Speed Insights -->
    <SpeedInsights />
  </body>
</html>